            <LinearLayout style="@style/DashboardItemLayout">

                <ImageView
                    style="@style/DashboardIcon"
                    android:contentDescription="@string/dashboard_icon_for_alarm"
                    android:src="@drawable/outline_access_alarm_24" />

                <TextView
                    style="@style/DashboardText"
                    android:text="@string/alarm" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- İnterkom -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/interkomCard"
            style="@style/DashboardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp">

            <LinearLayout style="@style/DashboardItemLayout">

                <ImageView
                    style="@style/DashboardIcon"
                    android:contentDescription="@string/dashboard_icon_for_interkom"
                    android:src="@drawable/outline_phone_enabled_24" />

                <TextView
                    style="@style/DashboardText"
                    android:text="@string/interkom" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sistem -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sistemCard"
