            android:layout_margin="2dp">

            <LinearLayout style="@style/DashboardItemLayout">

                <ImageView
                    style="@style/DashboardIcon"
                    android:contentDescription="@string/dashboard_icon_for_sensor"
                    android:src="@drawable/outline_sensors_24" />

                <TextView
                    style="@style/DashboardText"
                    android:text="@string/sensor" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Site Yönetimi -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/siteYonetimCard"
            style="@style/DashboardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp">

            <LinearLayout style="@style/DashboardItemLayout">

                <ImageView
                    style="@style/DashboardIcon"
                    android:contentDescription="@string/dashboard_icon_for_site_management"
                    android:src="@drawable/outline_business_24" />

                <TextView
                    style="@style/DashboardText"
                    android:text="@string/site_management" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Konsiyerj -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/konsiyerjCard"
            style="@style/DashboardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
